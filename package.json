{
  "name": "ChatWave",
  "version": "1.0.0",
  "main": "main.js",
  "description": "",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "dev": "node server.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "open": "^10.1.1",
    "tmi.js": "^1.8.5",
    "electron-store": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.redersoft.ChatWave",
    "productName": "ChatWave",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "server.js",
      "config.js",
      "public/**/*",
      "server/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "type": "module"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
